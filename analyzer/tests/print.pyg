from sys import argv
import tpg
import xml.etree.ElementTree as ET

if len(argv) < 2:
	print 'no filepath given'
	exit(1)

INPUT = argv[1]

ops =	{
			'+': lambda x,y: x+y,
			'-': lambda x,y: x-y
		}
def op(sym):
	return ops[sym]


def gen(v):
	t = type(v).__name__
	s = str(v)
	if t == 'str':
		s = s[1:-1]
	node = ET.Element(t)
	node.text = s
	ET.dump(node)

class Kami(tpg.Parser):
	r"""

	separator	spaces	:	'\s+'		;
	token		number	:	'\d+'		$ int
	token		string	:	'\'.+\''	$ str
	token		add		:	'[+-]'		$ op
	token		cout	:	'print'		;

	START	->	cout EXPR				;
	EXPR	->	number/x				$ gen(x)
			|	string/x				$ gen(x)
			;
	"""

kami = Kami()

with open(INPUT, 'r') as file:
	for line in file:
		if line:
			try:
				kami(line)
			except Exception:
				print tpg.exc()
		else:
			break
